<div autocomplete="off">

    <div class="cct-recent-events">
        {{#each recentEvents as |event|}}
        <div class="cct-event" data-index="{{@index}}" data-tooltip="{{event.name}}" style="background-image: url('{{event.img}}');"></div>
        {{/each}}
    </div>

    <div class="form-group">
        <label>{{localize 'Name'}}</label>
        <div class="form-fields">
            <input type="text" name="name">
        </div>
    </div>

    <div class="form-group">
        <label>{{localize 'COMBAT.CombatantInitiative'}}</label>
        <div class="form-fields">
            <input type="text" name="initiative">
        </div>
    </div>

    <div class="form-group">
        <label>{{localize 'combat-tracker-dock.add-event.duration'}}</label>
        <div class="form-fields">
            <input type="number" name="duration">
        </div>
    </div>

    <div class="form-group">
        <label>{{localize 'Image'}}</label>
        <div class="form-fields">
            <file-picker type="image" name="img" data-target="img" placeholder="path/image.png"></file-picker>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize 'Hidden'}}</label>
        <div class="form-fields">
            <input type="checkbox" name="hidden">
        </div>
    </div>
</div>
